{
    "name": "tiktofiy",
    "private": true,
    "version": "1.0.0",
    "author": "Dawid Bytys (salvia-dev)",
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap --use-workspaces",
        "start": "NODE_ENV=production yarn workspace @tiktofiy/api start",
        "test": "yarn workspace @tiktofiy/api test",
        "build": "yarn common:build && yarn api:build && yarn client:build",
        "common:build": "yarn workspace @tiktofiy/common build",
        "client:build": "yarn workspace @tiktofiy/client build",
        "client:start": "yarn workspace @tiktofiy/client start",
        "api:build": "yarn workspace @tiktofiy/api build",
        "api:dev": "NODE_ENV=development yarn workspace @tiktofiy/api dev",
        "api:cleanup": "yarn workspace @tiktofiy/api cleanup",
        "api:unit": "yarn workspace @tiktofiy/api test:unit"
    },
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.12",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-functional": "^4.1.1",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.4.7",
        "lerna": "^4.0.0",
        "prettier": "^2.5.1",
        "tsutils": "^3.21.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "axios": "^0.25.0"
    }
}
